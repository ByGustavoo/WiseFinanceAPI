<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="filepath">/app/Logs</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    disableAnsi="false"
                    alwaysWriteExceptions="true"
                    pattern="%highlight{[%d{HH:mm:ss.SSS}] [%t] %-5level %c{1} - %msg%n}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green, DEBUG=white, TRACE=cyan}" />
        </Console>

        <SpringProfile name="prod">
            <RollingFile
                    name="File"
                    fileName="${filepath}/WiseFinanceAPI.log"
                    filePattern="${filepath}/WiseFinanceAPI-%d{yyyy-MM-dd}.log">

                <PatternLayout pattern="[%d{HH:mm:ss.SSS}] [%t] %-5level %c{1} - %msg%n" />

                <Policies>
                    <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                </Policies>

                <DefaultRolloverStrategy>
                    <Delete basePath="${filepath}">
                        <IfFileName glob="*.log" />
                        <IfLastModified age="30d" />
                    </Delete>
                </DefaultRolloverStrategy>

            </RollingFile>
        </SpringProfile>
    </Appenders>

    <Loggers>
        <Logger name="org.hibernate" level="WARN" additivity="false">
            <AppenderRef ref="Console" />
            <SpringProfile name="prod">
                <AppenderRef ref="File" />
            </SpringProfile>
        </Logger>

        <Root level="INFO">
            <AppenderRef ref="Console" />
            <SpringProfile name="prod">
                <AppenderRef ref="File" />
            </SpringProfile>
        </Root>
    </Loggers>
</Configuration>